pipeline {
  agent {
    docker {
      image 'abhishekf5/maven-abhishek-docker-agent:v1'
      args '--user root -v /var/run/docker.sock:/var/run/docker.sock'
    }
  }

  environment {
    DOCKER_IMAGE = "brineshvarshan/jenkins-k8s-cicd:${BUILD_NUMBER}"
  }

  stages {

    stage('Checkout Code') {
      steps {
        git branch: 'main', url: 'https://github.com/brineshvarshan/jenkins-k8s-cicd-brinesh.git'
      }
    }

    stage('Build JAR with Maven') {
      steps {
        sh 'mvn clean package'
      }
    }

    stage('Build & Push Docker Image') {
      steps {
        script {
          sh 'docker build -t ${DOCKER_IMAGE} .'
          docker.withRegistry('https://index.docker.io/v1/', "docker-cred") {
            docker.image("${DOCKER_IMAGE}").push()
          }
        }
      }
    }

    stage('Update Deployment YAML') {
      steps {
        withCredentials([string(credentialsId: 'github', variable: 'GITHUB_TOKEN')]) {
          sh '''
            git config user.email "brineshvarshan28@gmail.com"
            git config user.name "Brinesh Varshan"

            sed -i "s/replaceImageTag/${BUILD_NUMBER}/g" k8s/deployment.yml

            git add k8s/deployment.yml
            git commit -m "Update image version to ${BUILD_NUMBER}"
            git push https://${GITHUB_TOKEN}@github.com/brineshvarshan/jenkins-k8s-cicd-brinesh HEAD:main
          '''
        }
      }
    }
  }
}
